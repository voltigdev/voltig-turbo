{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "pnpm db:up && pnpm with-env:development tsx watch src/server.ts",
    "build": "tsup",
    "start": "pnpm with-env:production node dist/server.js",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "biome check --write",
    "lint": "biome",
    "typecheck": "tsc --noEmit",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f db",
    "db:restart": "docker compose restart db",
    "with-env:production": "dotenv -e ../../.env --",
    "with-env:development": "dotenv -e ../../.env.development --"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@repo/api": "workspace:*",
    "@repo/auth": "workspace:*",
    "@repo/db": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "@trpc/server": "catalog:",
    "fastify": "^5.6.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/biome-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "dotenv-cli": "catalog:",
    "pino-pretty": "^13.1.1",
    "tsup": "catalog:",
    "tsx": "^4.19.2",
    "typescript": "catalog:"
  }
}
